<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingVertical="5sp"
>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:checked="false"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:id="@+id/header_check" android:focusable="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_txt_titulo"
            android:padding="5sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/sem_Tarefa"
            android:textAlignment="textStart"/>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="100"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            android:id="@+id/header_btn_pomodoro" android:layout_weight="0"
            style="@android:style/Widget.DeviceDefault.ImageButton" android:scaleType="centerInside"
            android:visibility="gone"/>
    <TextView
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_txt_progresso"
            android:layout_weight="0"
            android:textSize="20sp"
            android:paddingRight="10sp"
            android:textAlignment="textEnd"/>

</LinearLayout>