<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/item_lista_tarefa_img_prioridade"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" tools:srcCompat="@color/colorPrimary" app:srcCompat="@color/colorPrimary"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_lista_tarefa_txt_nome"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_lista_tarefa_spn_sub_tarefas"
    />
</LinearLayout>