<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_cronometro"
        tools:context=".Cronometro" android:orientation="vertical"
        android:gravity="center"
>
    <TextView
            android:text="Parabéns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"
            android:textSize="80sp"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Voce está fazendo está Tarefa:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_msg_cronometro" android:textSize="24sp"
            android:textAlignment="center"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_tarefa_cronometro" android:textSize="18sp"
            android:textAlignment="center"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15sp"/>
    <Chronometer
            android:layout_width="266dp"
            android:layout_height="129dp"
            android:id="@+id/cronometro"
            android:format="%s"
            android:textSize="100sp" android:textAlignment="center"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15sp"/>
    <Button
            android:text="Começa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_cronometro"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"/>

</LinearLayout>