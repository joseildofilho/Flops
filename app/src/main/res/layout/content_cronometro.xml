<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_cronometro"
        tools:context=".Cronometro" android:orientation="vertical"
        android:gravity="center"
>
    <TextView
            android:text="Voce está fazendo está Tarefa:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_msg_cronometro"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_tarefa_cronometro"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15sp"/>
    <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cronometro"
            android:format="%s"
    />
    <Space
            android:layout_width="match_parent"
            android:layout_height="15sp"/>
    <Button
            android:text="Começa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_cronometro"/>

</LinearLayout>